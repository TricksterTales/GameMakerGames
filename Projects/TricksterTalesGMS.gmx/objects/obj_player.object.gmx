          <argument>
            <kind>1</kind>
            <string>/// Update stuffs

var k_hor = scr_input_getHor();
var k_ver = scr_input_getVert();
var k_jump = scr_input_getButton( BTN_JUMP );
var k_fire = scr_input_getButton( BTN_FIRE );

// Falling or jumping?
if( place_meeting( x, y+1, obj_ground ) ) {
    onground = true;
    vspd = 0;
    vdebt = 0;
    if( k_jump ) {
        vspd = -jspd;
    }
} else {
    onground = false;
    vspd += grav;
    if( vspd &gt; vmax ) {
        vspd = vmax;
    }
}

// Side to side
hspd = wspd * k_hor;

// Facing where you're going
if( hspd != 0 ) {
    facing = sign(hspd);
}

// Default face right
if( facing == 0 ) {
    facing = 1;
}

// Horizontal movement
h = round(hspd);
hdebt += h - hspd;
if( abs(hdebt) &gt;= 1 ) {
    h -= sign(hdebt);
    hdebt -= sign(hdebt);
}
if( place_meeting( x + h, y, obj_ground ) ) {
    ystep = 0;
    while( place_meeting( x + h, y - ystep, obj_ground ) ) {
        ++ystep;
        if( radtodeg( arctan2( ystep, h ) ) &gt; steep ) {
            ystep = 0;
            break;
        }
    }
    if( onground &amp;&amp; !place_meeting( x + h, y - ystep, obj_ground ) ) {
        y -= ystep;
    } else {
        while( !place_meeting( x + sign(h), y, obj_ground ) ) {
            x += sign(h);
        }
        hspd = 0;
        h = 0;
        hdebt = 0;
    }
}
x += h;

// Vertical movement
v = round(vspd);
vdebt += v - vspd;
if( abs(vdebt) &gt;= 1 ) {
    v -= sign(vdebt);
    vdebt -= sign(vdebt);
}
if( place_meeting( x, y + v, obj_ground ) ) {
    while( !place_meeting( x, y + sign(v), obj_ground ) ) {
        y += sign(v);
    }
    vspd = 0;
    v = 0;
    vdebt = 0;
}
y += v;

// Update ground
onground = place_meeting( x, y+1, obj_ground );

// Firing a bullet
if( fps != 0 ) {
    ftime -= 1 / fps;
}
if( ftime &lt; -1 ) {
    ftime = -1;
}
if( k_fire &amp;&amp; ftime &lt;= 0 ) {
    var ball = instance_create( x + facing * flen, y, obj_bullet );
    ball.hspd = facing * (fhspd + fhrand * (random(1.01) - 0.5));
    ball.vspd = fvspd + fvrand * (random(1.01) - 0.5);
    ftime = fdelay;
}
</string>
